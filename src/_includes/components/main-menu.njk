    ]
%}
<div class="lt-menu">
  <div class="lt-container constrain constrain-medium">
    <div class="lt-row">
      <ul>
        <li {% if not page.fileSlug %} class="current" {% endif %}>
          <a href="/" title="Home">Home</a>
        </li>
        {%- for link in links -%}
