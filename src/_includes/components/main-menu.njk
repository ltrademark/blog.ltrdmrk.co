{% macro menuItem(url, label) %}
  <li {% if url in page.url  %} class="current" {% endif %}>
    <a href="{{url}}" title="{{label}}">{{label}}</a>
  </li>
{% endmacro %}
{% set links = [
        { label: 'Posts', url: '/posts/' },
        { label: 'About', url: '/about/' },
